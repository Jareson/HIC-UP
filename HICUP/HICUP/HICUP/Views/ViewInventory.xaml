<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HICUP.Views.ViewInventory">
    <ContentPage.Content>
        <ScrollView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Text="Inventory" FontSize="30" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" />
                <Label Text="Item" Grid.Row="1" Grid.Column="0" />
                <Label Text="Quantity" Grid.Row="1" Grid.Column="1" />
                <Label Text="Cheapest Price" Grid.Row="1" Grid.Column="2" />
                <Label Text="Price Location" Grid.Row="1" Grid.Column="3" />
                <Label Text="Last Purchase Date" Grid.Row="1" Grid.Column="4" />
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>